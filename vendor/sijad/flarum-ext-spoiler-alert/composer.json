{
    "name": "sijad/flarum-ext-spoiler-alert",
    "description": "Spoiler plugin for Flarum using spoiler-alert jQuery plugin",
    "type": "flarum-extension",
    "keywords": ["formatting", "bbcode", "spoiler", "alert", "hide", "content", "text", "hidden", "invisible"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sajjad Hashemian",
            "email": "wolaws@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/sijad/flarum-ext-spoiler-alert/issues",
        "source": "https://github.com/sijad/flarum-ext-spoiler-alert"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.5"
    },
    "autoload": {
        "psr-4": {
            "Sijad\\Spoiler\\Alert\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Spoiler Alert",
            "icon": {
                "name": "exclamation",
                "backgroundColor": "#fff",
                "color": "#c52033"
            }
        }
    },
    "conflict": {
        "sijad/flarum-spoiler": "*"
    }
}
